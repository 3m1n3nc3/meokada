<script>
    function Wo_TestFTP() {
        $('#ftptest').html('Please wait..');
        $.get(acpajax_url('test_ftp'), {}, function (data) {
            if (data.status == 200) {
                alert('Connection established!');
            } else if (data.status == 400) {
                alert(data.message);
            }
            $('#ftptest').html('Test FTP Connection');
        });
    }

    function Wo_TestS3() {
        $('#s3test').html('Please wait..');
        $.get(acpajax_url('test_s3'), {}, function (data) {
            if (data.status == 200) {
                alert('Connection established!');
            } else if (data.status == 300) {
                alert('Bucket doesn\'t exists');
            } else if (data.status == 500) {
                alert('Your s3 account doesn\'t have any buckets, please create one.');
            } else if (data.status == 400) {
                alert(data.message);
            } else  {
                alert('Error while connecting to amazone, please check your details');
            }
            $('#s3test').html('Test Connection');
        });
    }

    jQuery(document).ready(function($) {
        var slform = $("form.login-settings-form");

        slform.ajaxForm({
            url: acpajax_url('storeg-settings'),
            type: 'POST',
            dataType: 'json',
            beforeSubmit: function(arr,form){
                $(form).find('button[type=submit]').text('Please wait.').attr('disabled', 'true');
            },
            success: function(data, status, xhr, form){
                if (data.status == 200) {
                    $(form).find('div.form-alert').scroll2().html($('<div>',{
                        class:'alert alert-success',
                        text:'Settings has been updated successfully'
                    }));
                    setTimeout(function(){
                        slform.find('div.form-alert .alert').slideUp('fast',function(){
                            $(this).remove(); 
                        })    
                    },1000);
                }
                else{
                    $(form).find('div.form-alert').scroll2().html($('<div>',{
                        class:'alert alert-warning',
                        text: data.error
                    }));
                }

                slform.find('button[type=submit]').text('Save').removeAttr('disabled');
            }
        });
    });


</script>